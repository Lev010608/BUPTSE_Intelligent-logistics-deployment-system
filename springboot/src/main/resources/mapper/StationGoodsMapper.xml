<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.example.mapper.StationGoodsMapper">

    <sql id="Base_Column_List">
        sg.id, sg.station_id, sg.goods_id, sg.quantity, g.name as name, g.category as category
    </sql>

    <select id="selectAll" resultType="com.example.entity.StationGoods">
        select
        <include refid="Base_Column_List" />
        from station_goods sg
        left join goods g on sg.goods_id = g.id
    </select>

    <select id="selectById" resultType="com.example.entity.StationGoods">
        select
        <include refid="Base_Column_List" />
        from station_goods sg
        left join goods g on sg.goods_id = g.id
        where sg.id = #{id}
    </select>

    <select id="selectByStationId" resultType="com.example.entity.StationGoods">
        select
        <include refid="Base_Column_List" />
        from station_goods sg
        left join goods g on sg.goods_id = g.id
        where sg.station_id = #{stationId}
    </select>

    <select id="selectByGoodsId" resultType="com.example.entity.StationGoods">
        select
        <include refid="Base_Column_List" />
        from station_goods sg
        left join goods g on sg.goods_id = g.id
        where sg.goods_id = #{goodsId}
    </select>

    <delete id="deleteById">
        delete from station_goods
        where id = #{id}
    </delete>

    <insert id="insert" parameterType="com.example.entity.StationGoods" useGeneratedKeys="true" keyProperty="id">
        insert into station_goods
        <trim prefix="(" suffix=")" suffixOverrides=",">
            <if test="stationId != null">station_id,</if>
            <if test="goodsId != null">goods_id,</if>
            <if test="quantity != null">quantity,</if>
        </trim>
        <trim prefix="values (" suffix=")" suffixOverrides=",">
            <if test="stationId != null">#{stationId},</if>
            <if test="goodsId != null">#{goodsId},</if>
            <if test="quantity != null">#{quantity},</if>
        </trim>
    </insert>

    <update id="updateById" parameterType="com.example.entity.StationGoods" keyProperty="id">
        update station_goods
        <set>
            <if test="stationId != null">
                station_id = #{stationId},
            </if>
            <if test="goodsId != null">
                goods_id = #{goodsId},
            </if>
            <if test="quantity != null">
                quantity = #{quantity},
            </if>
        </set>
        where id = #{id}
    </update>

</mapper>

